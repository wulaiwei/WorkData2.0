
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,initial-scale=1.0,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <title>管理员登录</title>
    <link href="~/scripts/artdialog/ui-dialog.css" rel="stylesheet" />
    <link href="~/Areas/Admin/skin/default/style.css" rel="stylesheet" />
    <link href="~/Areas/Admin/skin/common.css" rel="stylesheet"/>

    <script src="~/scripts/jquery/jquery-1.11.2.min.js"></script>
    <script src="~/scripts/artdialog/dialog-plus-min.js"></script>
    <script type="text/javascript">
        $(function () {
            //检测IE
            if ('undefined' == typeof (document.body.style.maxHeight)) {
                window.location.href = 'ie6update.html';
            }
        });
    </script>
    <script src="~/Areas/Admin/js/common.js"></script>
</head>

<body class="loginbody">
<form id="form1" method="post" action="~/Admin/Login/Index">
    @Html.AntiForgeryToken()
    <div style="width: 100%; height: 100%; min-width: 300px; min-height: 260px;"></div>
    <div class="login-wrap">
        <div class="login-logo">LOGO</div>
        <div class="login-form">
            <div class="col">
                <input type="text" name="name" class="login-input" placeholder="管理员账号" title="管理员账号"/>
                <label class="icon user" for="txtUserName"></label>
            </div>
            <div class="col">
                <input type="password" name="pwd" class="login-input" placeholder="管理员密码"/>
                <label class="icon pwd" for="txtPassword"></label>
            </div>
            <div class="col">
                <input type="submit" value="登 录" class="login-btn"/>
            </div>
        </div>
        <div class="login-tips"><i></i>
            <p id="msgtip">请输入用户名和密码</p>
        </div>
    </div>

    <div class="copy-right">
        <p>版权归个人所有.</p>
    </div>
    <input type="hidden" name="message" id="message" value="@TempData["ErrorMessage"]"/>
</form>

<script type="text/javascript">
    function showAlert() {
        var message = $("#message").val();
        if (message == null || message.length === 0) {
            return;
        }
        else {
            ShowMaxDialog("提示",message);
        }
    }

    $(function () {
        showAlert();
    });
</script>
</body>
</html>

